<!DOCTYPE html>
<!--[if IE]><![endif]-->
<!--[if IE 8 ]><html dir="{{ direction }}" lang="{{ lang }}" class="ie8"><![endif]-->
<!--[if IE 9 ]><html dir="{{ direction }}" lang="{{ lang }}" class="ie9"><![endif]-->
<!--[if (gt IE 9)|!(IE)]><!-->
<html dir="{{ direction }}" lang="{{ lang }}">
<!--<![endif]-->
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<title>{{ title }}</title>
{% if robots %}
<meta name="robots" content="{{ robots }}" />
{% endif %}
<base href="{{ base }}" />
{% if description %}
<meta name="description" content="{{ description }}" />
{% endif %}
{% if keywords %}
<meta name="keywords" content="{{ keywords }}" />
{% endif %}
<meta property="og:title" content="{{ title }}" />
<meta property="og:type" content="website" />
<meta property="og:url" content="{{ og_url }}" />
{% if og_image %}
<meta property="og:image" content="{{ og_image }}" />
{% else %}
<meta property="og:image" content="{{ logo }}" />
{% endif %}
<meta property="og:site_name" content="{{ name }}" />
<script src="catalog/view/javascript/jquery/jquery-2.1.1.min.js" type="text/javascript"></script>
<link href="catalog/view/javascript/bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen" />
<script src="catalog/view/javascript/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
<link href="catalog/view/javascript/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />

{# Customized js #}


{# Customized font #}
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">

{# Standart stylesheet #}
<link href="catalog/view/theme/mypol/stylesheet/stylesheet.css" rel="stylesheet">
{% for style in styles %}
<link href="{{ style.href }}" type="text/css" rel="{{ style.rel }}" media="{{ style.media }}" />
{% endfor %}

{# Customized stylesheet #}
<link href="catalog/view/theme/mypol/stylesheet/main.css" rel="stylesheet">

{% for script in scripts %}
<script src="{{ script }}" type="text/javascript"></script>
{% endfor %}
<script src="catalog/view/javascript/common.js" type="text/javascript"></script>
{% for link in links %}
<link href="{{ link.href }}" rel="{{ link.rel }}" />
{% endfor %}
{% for analytic in analytics %}
{{ analytic }}
{% endfor %}
</head>
<body>
  <header class="header">
        {# Header top start #}
        <div class="header-top"> 
            <div class="container-default flex items-center justify-between h-36">
                <div class="flex items-center">
                    {{ language }}
                    <!-- Header contact start -->
                    <div class="header-top__contact">
                        <button class="btn-list line-v flex items-center" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                            <span>Контакти</span>
                            <svg width="14" height="14" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M10.5 5.25L7 8.75L3.5 5.25" stroke="white"/>
                            </svg>
                        </button>
                        <ul class="dropdown-menu drop-list drop-list__contact" aria-labelledby="dropdownMenu1">
                          <li><a href="#">{{ telephone }}</a></li>
                          <li role="separator" class="divider"></li>
                          <li><a href="#">+38(067)555-88-99</a></li>
                        </ul>
                      </div>
                    <!-- Header contact end -->  
                </div>          
                <!-- Header help start -->
                <div class="header-top__right flex">
                    <div class="mr5">
                        <a href="#">Обмін і повернення</a>
                    </div>
                    <div class="line-v">
                        <a href="#">Доставка і оплата</a>
                    </div>
                </div>
                <!-- Help mobile -->
                <div class="header-top__right--mob">
                    <button class="flex items-center btn-list" type="button" id="dropdownMenu3" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                        <span>Допомога</span>
                        <svg width="14" height="14" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M10.5 5.25L7 8.75L3.5 5.25" stroke="white"/>
                        </svg>
                    </button>
                    <ul class="dropdown-menu drop-list drop-list__right" aria-labelledby="dropdownMenu3">
                      <li><a href="#">Обмін і повернення</a></li>
                      <li role="separator" class="divider"></li>
                      <li><a href="#">Доставка і оплата</a></li>
                    </ul>
                </div>
                <!-- Help mobile end -->
                <!-- Header help end -->
            </div>
        </div>
        {# Header top end #}

        {# Header second start #}
        <div class="line-b">
            <div class="container-default header-second flex items-center justify-between">               
                <div class="header-logo">
                    {% if logo %}
                        {% if home == og_url %}
                            <img src="{{ logo }}" title="{{ name }}" alt="{{ name }}" class="img-responsive" />
                        {% else %}
                        <a href="{{ home }}"><img src="{{ logo }}" title="{{ name }}" alt="{{ name }}" class="img-responsive" /></a>
                        {% endif %}
                    {% else %}
                        <h1><a href="{{ home }}">{{ name }}</a></h1>
                    {% endif %}
                </div>

            {{ menu }}

                <!-- Start block right -->
                <div class="header-second__right flex items-center">
                    
                    {{search}}

                    {{ cart }}

                    <div class="header-menu__favorite">
                        <a href="{{ wishlist }}" id="wishlist-total" title="{{ text_wishlist }}">
                            <img src="image/catalog/favorite.svg" alt="favorite" title="">
                        </a>
                    </div>  

                    <div class="dropdown header-menu__user">
                        <a href="{{ account }}" title="{{ text_account }}" class="dropdown-toggle flex" data-toggle="dropdown">
                            <img src="image/catalog/user.svg" alt="user" title="">
                        </a>
                            <ul class="dropdown-menu dropdown-menu-right">
                                {% if logged %}
                                <li><a href="{{ account }}">{{ text_account }}</a></li>
                                <li><a href="{{ order }}">{{ text_order }}</a></li>
                                <li><a href="{{ transaction }}">{{ text_transaction }}</a></li>
                                <li><a href="{{ download }}">{{ text_download }}</a></li>
                                <li><a href="{{ logout }}">{{ text_logout }}</a></li>
                                {% else %}
                                <li><a class="" href="{{ register }}">{{ text_register }}</a></li>
                                <li><a class="" href="{{ login }}">{{ text_login }}</a></li>
                                {% endif %}
                            </ul>
                    </div>

                    <div class="menu-mob">
                        <span></span>
                        <span></span>
                        <span></span>
                    </div>   
                </div>  
                {# End block right #}
            </div>
        </div>
        {# Header second end #}


    {# Promo line #}
    <div class="header-promo container-default flex items-center">
        <div class="header-promo__discount">
            <a href="" class="">Знижка <span>10%</span> із промокодом Hot24</a>
        </div> 
    </div>
    {# Promo line end #}
</header>


